<Window x:Class="FishingApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishingApp.WPF"
        mc:Ignorable="d"
        Title="Fishing App" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Вход">
                <StackPanel Margin="20">
                    <TextBlock Text="Имя пользователя" />
                    <TextBox x:Name="LoginUsernameBox" Margin="0,5"/>

                    <TextBlock Text="Пароль" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="LoginPasswordBox" Margin="0,5"/>

                    <Button Content="Войти"
                            Margin="0,20,0,0"
                            Click="LoginButton_Click"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Регистрация">
                <StackPanel Margin="20">
                    <TextBlock Text="Имя пользователя" />
                    <TextBox x:Name="RegisterUsernameBox" Margin="0,5"/>

                    <TextBlock Text="Пароль" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="RegisterPasswordBox" Margin="0,5"/>

                    <Button Content="Зарегистрироваться"
                            Margin="0,20,0,0"
                            Click="RegisterButton_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>