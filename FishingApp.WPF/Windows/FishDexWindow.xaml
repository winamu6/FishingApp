<Window x:Class="FishingApp.WPF.Windows.FishDexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishingApp.WPF.Windows"
        mc:Ignorable="d"
        Title="FishDexWindow" Height="450" Width="800">
    <Grid Margin="10">
        <ListBox x:Name="FishListBox" DisplayMemberPath="Name" SelectionChanged="FishListBox_SelectionChanged"/>
        <StackPanel Margin="200,0,0,0">
            <TextBlock x:Name="FishName" FontWeight="Bold" FontSize="20"/>
            <TextBlock x:Name="FishReservoir"/>
            <TextBlock x:Name="FishWeight"/>
            <TextBlock x:Name="FishDescription" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
